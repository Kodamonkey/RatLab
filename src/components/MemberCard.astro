---
// src/components/MemberCard.astro
interface Props {
  name: string;
  role: string;
  img: string;
  profile: string;
}
const { name, role, img, profile } = Astro.props as Props;
---

<article class="bg-white shadow rounded overflow-hidden">
  <img src={img} alt={`Foto de ${name}`} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-semibold">{name}</h3>
    <p class="text-gray-600">{role}</p>
    <a
      href={profile}
      target="_blank"
      class="mt-2 inline-block text-blue-600 hover:underline">Perfil</a
    >
  </div>
</article>
