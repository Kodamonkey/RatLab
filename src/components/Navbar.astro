---
// src/components/Navbar.astro
const base = import.meta.env.BASE_URL;
const resolveUrl = (path: string) => {
  if (path === "/") {
    return base;
  }
  const cleanPath = path.startsWith("/") ? path.substring(1) : path;
  return `${base}${cleanPath}`;
};
---

<nav
  class="text-white p-4"
  style={`background: url('${resolveUrl("/images/background/background.png")}') center/cover no-repeat;`}
>
  <div class="container mx-auto flex justify-between items-center">
    <a href={resolveUrl("/")} class="flex items-center space-x-2 text-xl font-bold">
      <img src={resolveUrl("/images/logo/ratLab-logo.png")} alt="Logo RatLab" class="h-20 w-20" />
    </a>
    <ul class="flex space-x-6">
      <li><a href={resolveUrl("/")}>Inicio</a></li>
      <li><a href={resolveUrl("/about")}>Sobre Nosotros</a></li>
      <li><a href={resolveUrl("/research")}>Investigaci√≥n</a></li>
      <li><a href={resolveUrl("/members")}>Miembros</a></li>
      <li><a href={resolveUrl("/publications")}>Publicaciones</a></li>
      <li><a href={resolveUrl("/contact")}>Contacto</a></li>
    </ul>
  </div>
</nav>
