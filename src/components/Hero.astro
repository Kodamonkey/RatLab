---
// src/components/Hero.astro
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props as Props;
---

<section class="flex items-center justify-center text-center text-white">
  <div class="p-8 rounded" style="background-color: #7235A2;">
    <h1 class="text-4xl md:text-5xl font-bold">{title}</h1>
    <p class="mt-4 text-xl md:text-2xl">{subtitle}</p>
  </div>
</section>
