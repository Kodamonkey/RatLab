---
// src/components/Hero.astro
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props as Props;
---

<section
  class="h-64 md:h-96 flex items-center text-left text-white"
>
  <div class="p-8 rounded ml-8" style="background-color: #7235A2;">
    <h1 class="text-4xl font-bold">{title}</h1>
    <p class="mt-2 text-xl">{subtitle}</p>
  </div>
</section>
