---
// src/pages/contact.astro
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="max-w-4xl mx-auto">
    <!-- Hero Section -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4 text-gray-900">Contact Us</h1>
      <p class="text-xl text-gray-600">
        Get in touch with the Radio Transients Laboratory for collaborations,
        inquiries, and opportunities
      </p>
    </div>

    <!-- Main Contact Information -->
    <section class="mb-12">
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h2 class="text-2xl font-bold mb-4 text-blue-800">
            General Inquiries
          </h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <svg
                class="w-5 h-5 text-blue-600 mt-1 mr-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <div>
                <p class="font-semibold">Email</p>
                <a
                  href="mailto:ratlab@astro.puc.cl"
                  class="text-blue-600 hover:underline"
                >
                  ratlab@astro.puc.cl
                </a>
              </div>
            </div>
            <div class="flex items-start">
              <svg
                class="w-5 h-5 text-blue-600 mt-1 mr-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <p class="font-semibold">Address</p>
                <p class="text-gray-700">
                  Instituto de Astrofísica<br />
                  Pontificia Universidad Católica de Chile<br />
                  Av. Vicuña Mackenna 4860<br />
                  Macul, Santiago, Chile
                </p>
              </div>
            </div>
            <div class="flex items-start">
              <svg
                class="w-5 h-5 text-blue-600 mt-1 mr-3"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"
                ></path>
              </svg>
              <div>
                <p class="font-semibold">Website</p>
                <a
                  href="https://www.astro.puc.cl"
                  class="text-blue-600 hover:underline"
                >
                  www.astro.puc.cl
                </a>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h2 class="text-2xl font-bold mb-4 text-blue-800">Quick Contact</h2>
          <form
            class="space-y-4"
            action="https://formspree.io/f/yourFormID"
            method="POST"
          >
            <div>
              <label for="name" class="block font-medium text-gray-700 mb-1"
                >Full Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block font-medium text-gray-700 mb-1"
                >Email Address</label
              >
              <input
                type="email"
                id="email"
                name="email"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              />
            </div>
            <div>
              <label
                for="affiliation"
                class="block font-medium text-gray-700 mb-1"
                >Institution/Affiliation</label
              >
              <input
                type="text"
                id="affiliation"
                name="affiliation"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="subject" class="block font-medium text-gray-700 mb-1"
                >Subject</label
              >
              <select
                id="subject"
                name="subject"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                required
              >
                <option value="">Select a topic...</option>
                <option value="collaboration">Research Collaboration</option>
                <option value="data-access">Data Access Request</option>
                <option value="visit">Visit/Seminar Request</option>
                <option value="student">Student Opportunities</option>
                <option value="outreach">Outreach Activity</option>
                <option value="media">Media/Press Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="message" class="block font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Please describe your inquiry in detail..."
                required></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-blue-800 text-white py-3 px-6 rounded-lg hover:bg-blue-700 font-semibold transition-colors"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Team Contact -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 text-gray-900">Team Contacts</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h3 class="text-lg font-semibold mb-2 text-gray-800">
            Dr. Marilyn Cruces
          </h3>
          <p class="text-sm text-blue-600 mb-3">
            Principal Investigator & Group Leader
          </p>
          <div class="space-y-2 text-sm">
            <p>
              <span class="font-medium">Research:</span> Radio transients, FRBs,
              Machine Learning
            </p>
            <p>
              <span class="font-medium">Email:</span>
              <a
                href="mailto:mscruces@uc.cl"
                class="text-blue-600 hover:underline">mscruces@uc.cl</a
              >
            </p>
            <p>
              <span class="font-medium">Office:</span> Instituto de Astrofísica UC
            </p>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h3 class="text-lg font-semibold mb-2 text-gray-800">
            Research Collaborations
          </h3>
          <p class="text-sm text-blue-600 mb-3">For Research Partnerships</p>
          <div class="space-y-2 text-sm text-gray-700">
            <p>• Joint research projects</p>
            <p>• Data sharing agreements</p>
            <p>• Observing proposals</p>
            <p>• Publication collaborations</p>
          </div>
          <div class="mt-3">
            <a
              href="mailto:ratlab@astro.puc.cl?subject=Research Collaboration"
              class="text-blue-600 hover:underline text-sm"
            >
              Contact for collaborations
            </a>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md border">
          <h3 class="text-lg font-semibold mb-2 text-gray-800">
            Student Opportunities
          </h3>
          <p class="text-sm text-blue-600 mb-3">For Academic Inquiries</p>
          <div class="space-y-2 text-sm text-gray-700">
            <p>• Graduate student positions</p>
            <p>• Internship opportunities</p>
            <p>• Thesis supervision</p>
            <p>• Research assistantships</p>
          </div>
          <div class="mt-3">
            <a
              href="mailto:mscruces@uc.cl?subject=Student Opportunities"
              class="text-blue-600 hover:underline text-sm"
            >
              Inquire about positions
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Specific Contact Types -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 text-gray-900">
        Specialized Contacts
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div
          class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-lg border"
        >
          <h3 class="text-xl font-semibold mb-4 text-blue-800">
            For Researchers & Scientists
          </h3>
          <div class="space-y-3">
            <div class="bg-white p-4 rounded border-l-4 border-blue-500">
              <h4 class="font-semibold mb-1">Data Access & Resources</h4>
              <p class="text-sm text-gray-700 mb-2">
                Request access to our datasets, software tools, or computing
                resources.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Data Access Request"
                class="text-blue-600 hover:underline text-sm"
              >
                data-access@ratlab.puc.cl
              </a>
            </div>
            <div class="bg-white p-4 rounded border-l-4 border-green-500">
              <h4 class="font-semibold mb-1">Technical Support</h4>
              <p class="text-sm text-gray-700 mb-2">
                Get help with our software tools, analysis pipelines, or
                technical questions.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Technical Support"
                class="text-green-600 hover:underline text-sm"
              >
                support@ratlab.puc.cl
              </a>
            </div>
            <div class="bg-white p-4 rounded border-l-4 border-purple-500">
              <h4 class="font-semibold mb-1">Collaboration Proposals</h4>
              <p class="text-sm text-gray-700 mb-2">
                Propose joint research projects, observing campaigns, or
                publication collaborations.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Collaboration Proposal"
                class="text-purple-600 hover:underline text-sm"
              >
                collaborate@ratlab.puc.cl
              </a>
            </div>
          </div>
        </div>

        <div
          class="bg-gradient-to-r from-green-50 to-teal-50 p-6 rounded-lg border"
        >
          <h3 class="text-xl font-semibold mb-4 text-green-800">
            For Media & Public
          </h3>
          <div class="space-y-3">
            <div class="bg-white p-4 rounded border-l-4 border-red-500">
              <h4 class="font-semibold mb-1">Press & Media</h4>
              <p class="text-sm text-gray-700 mb-2">
                Interview requests, press releases, and expert commentary on
                radio astronomy discoveries.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Media Inquiry"
                class="text-red-600 hover:underline text-sm"
              >
                press@ratlab.puc.cl
              </a>
            </div>
            <div class="bg-white p-4 rounded border-l-4 border-orange-500">
              <h4 class="font-semibold mb-1">Outreach & Education</h4>
              <p class="text-sm text-gray-700 mb-2">
                School visits, public talks, science festivals, and educational
                material requests.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Outreach Request"
                class="text-orange-600 hover:underline text-sm"
              >
                outreach@ratlab.puc.cl
              </a>
            </div>
            <div class="bg-white p-4 rounded border-l-4 border-teal-500">
              <h4 class="font-semibold mb-1">Industry Partnerships</h4>
              <p class="text-sm text-gray-700 mb-2">
                Technology transfer, consulting services, and commercial
                collaboration opportunities.
              </p>
              <a
                href="mailto:ratlab@astro.puc.cl?subject=Industry Partnership"
                class="text-teal-600 hover:underline text-sm"
              >
                industry@ratlab.puc.cl
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Visit Information -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 text-gray-900">Visit Us</h2>
      <div class="bg-white p-6 rounded-lg shadow-md border">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-xl font-semibold mb-4 text-gray-800">
              Location & Directions
            </h3>
            <div class="space-y-3">
              <div>
                <h4 class="font-semibold">Instituto de Astrofísica</h4>
                <p class="text-gray-700">
                  Pontificia Universidad Católica de Chile<br />
                  Av. Vicuña Mackenna 4860, Macul<br />
                  Santiago, Chile
                </p>
              </div>
              <div>
                <h4 class="font-semibold">Public Transportation</h4>
                <p class="text-gray-700">
                  Metro: San Joaquín (Línea 5)<br />
                  Bus: Multiple routes serve Campus San Joaquín
                </p>
              </div>
              <div>
                <h4 class="font-semibold">Parking</h4>
                <p class="text-gray-700">
                  Visitor parking available on campus<br />
                  Registration required at security
                </p>
              </div>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4 text-gray-800">
              Visitor Information
            </h3>
            <div class="space-y-3">
              <div class="bg-blue-50 p-4 rounded">
                <h4 class="font-semibold text-blue-800">Scheduling Visits</h4>
                <p class="text-sm text-blue-700">
                  Please contact us at least one week in advance to schedule
                  visits, meetings, or facility tours.
                </p>
              </div>
              <div class="bg-yellow-50 p-4 rounded">
                <h4 class="font-semibold text-yellow-800">Campus Access</h4>
                <p class="text-sm text-yellow-700">
                  All visitors must register at the main security checkpoint and
                  will be provided with visitor badges.
                </p>
              </div>
              <div class="bg-green-50 p-4 rounded">
                <h4 class="font-semibold text-green-800">Facilities</h4>
                <p class="text-sm text-green-700">
                  Our labs feature state-of-the-art computing facilities,
                  meeting rooms, and collaborative workspaces.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Media & Online Presence -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold mb-6 text-gray-900">Follow Our Research</h2>
      <div class="bg-gray-50 p-6 rounded-lg">
        <div class="grid md:grid-cols-4 gap-4">
          <div class="text-center">
            <div
              class="bg-blue-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-2"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                ></path>
              </svg>
            </div>
            <h4 class="font-semibold">Twitter</h4>
            <p class="text-sm text-gray-600">Latest research updates</p>
          </div>
          <div class="text-center">
            <div
              class="bg-gray-800 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-2"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </div>
            <h4 class="font-semibold">GitHub</h4>
            <p class="text-sm text-gray-600">Open source code</p>
          </div>
          <div class="text-center">
            <div
              class="bg-red-600 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-2"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
                ></path>
              </svg>
            </div>
            <h4 class="font-semibold">YouTube</h4>
            <p class="text-sm text-gray-600">Educational videos</p>
          </div>
          <div class="text-center">
            <div
              class="bg-blue-700 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-2"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </div>
            <h4 class="font-semibold">LinkedIn</h4>
            <p class="text-sm text-gray-600">Professional network</p>
          </div>
        </div>
        <div class="text-center mt-6">
          <p class="text-gray-700">
            Stay updated on our latest discoveries, publications, and research
            activities by following us on social media.
          </p>
        </div>
      </div>
    </section>

    <!-- Emergency Contact -->
    <section class="mb-12">
      <div class="bg-red-50 border border-red-200 p-6 rounded-lg">
        <h2 class="text-xl font-bold mb-2 text-red-800">Emergency Contact</h2>
        <p class="text-red-700 mb-2">
          For urgent matters related to ongoing observations or time-sensitive
          research:
        </p>
        <p class="font-semibold text-red-800">
          Emergency Line: +56 2 2354 4935
        </p>
        <p class="text-sm text-red-600 mt-2">
          This line should only be used for genuine emergencies affecting active
          research operations.
        </p>
      </div>
    </section>
  </div>
</DefaultLayout>
