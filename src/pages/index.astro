---
// src/pages/index.astro
import DefaultLayout from "../layouts/DefaultLayout.astro";
import Hero from "../components/Hero.astro";
---

<DefaultLayout>
  <Hero
    title="Welcome to RatLab"
    subtitle="Radio Transients Group â€“ PUC Chile"
    backgroundImage="/images/banner-transient.jpg"
  />
  <section class="mt-8">
    <h2 class="text-2xl font-semibold mb-4">Our Mission</h2>
    <p>
      RatLab is dedicated to the study of transient phenomena in radio astronomy,
      including fast radio bursts (FRBs) and pulsar pulses, to understand the Universe
      through the analysis of data from various radio telescopes such as ALMA and Effelsberg.
    </p>
  </section>

  <section class="mt-8">
    <h2 class="text-2xl font-semibold mb-4">Discover More</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a
        href="/RatLab/about"
        class="p-6 bg-white shadow hover:shadow-lg transition rounded"
      >
        <h3 class="text-xl font-semibold">About Us</h3>
        <p>Learn who we are and what we do at RatLab.</p>
      </a>
      <a
        href="/RatLab/research"
        class="p-6 bg-white shadow hover:shadow-lg transition rounded"
      >
        <h3 class="text-xl font-semibold">Research</h3>
        <p>Explore our projects and radio transient data.</p>
      </a>
      <a
        href="/RatLab/contact"
        class="p-6 bg-white shadow hover:shadow-lg transition rounded"
      >
        <h3 class="text-xl font-semibold">Contact</h3>
        <p>Write to us to collaborate or ask questions.</p>
      </a>
    </div>
  </section>
</DefaultLayout>
